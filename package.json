{
  "name": "@wodxpro/contract-data",
  "version": "1.0.0",
  "description": "ABIs and addresses for WOD X PRO smart contracts",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "abis/**/*",
    "addresses/**/*",
    "dist/**/*"
  ],
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./abis/*": "./abis/*.json",
    "./addresses/*": "./addresses/*.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "compile": "hardhat compile",
    "test": "hardhat test",
    "deploy:local": "hardhat run scripts/deploy.ts --network localhost",
    "deploy:polygon": "hardhat run scripts/deploy.ts --network polygon",
    "test-connection": "hardhat run scripts/testConnection.ts --network polygon",
    "initial-distribution": "hardhat run scripts/initialDistribution.ts --network polygon",
    "update-distribution-file": "ts-node scripts/updateDistributionFile.ts",
    "check-balance": "ts-node scripts/checkBalance.ts",
    "transfer-ownership": "hardhat run scripts/transferOwnership.ts --network polygon",
    "verify:polygon": "hardhat run scripts/verify.ts --network polygon",
    "verify": "hardhat verify",
    "extract-abis": "node scripts/extract-abis.js",
    "update-addresses": "node scripts/update-addresses.js",
    "build": "npm run extract-abis && npm run update-addresses && npm run compile-package",
    "compile-package": "tsup src/index.ts --format cjs,esm --dts --out-dir dist",
    "prepublishOnly": "npm run build"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.1.0",
    "@nomicfoundation/hardhat-ethers": "^3.1.2",
    "@nomicfoundation/hardhat-network-helpers": "^1.1.2",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@openzeppelin/contracts": "^5.0.0",
    "@typechain/ethers-v6": "^0.4.3",
    "@typechain/hardhat": "^8.0.0",
    "@types/chai": "^4.3.20",
    "@types/mocha": "^10.0.10",
    "@types/node": "^20.0.0",
    "chai": "^4.5.0",
    "dotenv": "^17.2.3",
    "hardhat": "^2.22.0",
    "hardhat-gas-reporter": "^1.0.10",
    "solidity-coverage": "^0.8.16",
    "source-map": "^0.7.4",
    "ts-node": "^10.9.2",
    "tsup": "^8.0.0",
    "typechain": "^8.3.2",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "@alchemy/aa-accounts": "^3.6.1",
    "@alchemy/aa-alchemy": "^3.7.3",
    "@alchemy/aa-core": "^3.6.1",
    "@alchemy/aa-ethers": "^3.6.1",
    "ethers": "^6.8.0"
  }
}

