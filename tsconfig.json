{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "types": ["node", "hardhat", "@nomicfoundation/hardhat-ethers"]
  },
  "include": [
    "./scripts/**/*",
    "./test/**/*",
    "./src/**/*",
    "./hardhat.config.ts",
    "./typechain-types/**/*"
  ],
  "exclude": ["node_modules", "dist"]
}
